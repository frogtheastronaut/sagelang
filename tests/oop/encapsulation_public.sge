// Test public access modifier (default)
// Public members can be accessed from anywhere

class Person {
    public name;
    public age;
    
    function constructor(name, age) {
        this.name = name;
        this.age = age;
    }
    
    public function introduce() {
        print "Hi, I'm " + this.name + " and I'm " + this.age + " years old";
    }
    
    public function haveBirthday() {
        this.age = this.age + 1;
        print "Happy birthday! Now " + this.age + " years old";
    }
}

class Student < Person {
    public grade;
    
    function constructor(name, age, grade) {
        this.name = name;
        this.age = age;
        this.grade = grade;
    }
    
    public function study() {
        print this.name + " is studying in grade " + this.grade;
    }
}

// All public access works
let person = new Person("Alice", 25);
person.introduce();
print "Direct access to name: " + person.name;
print "Direct access to age: " + person.age;

person.haveBirthday();

print "---";

let student = new Student("Bob", 15, 10);
student.introduce();
student.study();

// Can access and modify public fields directly
student.name = "Robert";
student.grade = 11;
student.introduce();
student.study();
